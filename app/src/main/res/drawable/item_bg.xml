<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="300" android:exitFadeDuration="300"
    >
   <item android:state_pressed="false">
      <layer-list>
          <item >
              <shape>
               <gradient
                   android:startColor="#ede7e7"
                   android:centerColor="#ede7e7"
                   android:endColor="#ede7e7"
                   android:angle="315"/>
                  <corners android:radius="5dp"/>
              </shape>

          </item>
          <item android:left="1dp" android:bottom="3dp" android:right="3dp">
              <shape>
                  <solid android:color="#ffffff"/>
                  <corners android:radius="5dp"/>
              </shape>
          </item>
      </layer-list>
   </item>

    <item android:state_pressed="true">
        <layer-list>
            <item >
                <shape>
                    <gradient
                        android:startColor="#ede7e7"
                        android:centerColor="#ede7e7"
                        android:endColor="#ede7e7"
                        android:angle="315"/>
                    <corners android:radius="5dp"/>
                </shape>

            </item>
            <item android:left="1dp" android:bottom="3dp" android:right="3dp">
                <shape>
                    <solid android:color="#e6e3e3"/>
                    <corners android:radius="5dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>