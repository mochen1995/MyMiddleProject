<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_image_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fcfcfc"
    tools:context="com.example.mmcc.mymiddleproject.activitys.ImageDetailActivity">

    <include layout="@layout/title_bar_layout"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/activity_image_detail_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#706666"
        android:padding="2dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <TextView
            android:id="@+id/activity_image_detail_describe"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:textColor="#fff"
            android:gravity="center_vertical"
            android:maxLines="2"
            />
         <TextView
             android:id="@+id/activity_image_detail_count"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:gravity="center_vertical"
             android:textColor="#fff"
             android:lines="1"/>
    </LinearLayout>

</LinearLayout>
